<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/imgOrderEval"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/trong" />
            <TextView
                android:id="@+id/MadonEval"
                android:text="  Mã Đơn Hàng: "
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_store" />

                <TextView
                    android:id="@+id/nameShopOrderEval"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"

                    android:text="Đinh Nho Nam"
                    android:textColor="@color/black"
                    android:textStyle="bold" />



            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_19sdp">

                <TextView
                    android:id="@+id/nameProductOrderEval"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="Tee basic ss1 CREWZ áo thun tay lỡ unisex Local Brand -Lamo Store(V427)" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_outline"
                android:padding="3dp"
                android:text="Miễn phí 7 ngày đổi trả hàng"
                android:textColor="#F80000"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="100sp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/freeship" />

            <TextView
                android:id="@+id/priceOrderEval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"

                android:text="399.000 VND"
                android:textColor="#f57224"
                android:textSize="18dp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/giamEval"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:text="Số Lượng : " />

                <TextView
                    android:id="@+id/quantiOrderEval"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:text="1" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>