<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    >

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:elevation="3dp"

        android:layout_marginBottom="1dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:id="@+id/returnOrderWait"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:gravity="center"
            android:layout_weight="0.6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="Đơn Hàng Chờ Xác Nhận"
                android:textColor="#353535"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/exsitOrderWait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/notItemOrderWait"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            ></ImageView>
        <TextView
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn chưa mua đơn hàng nào"/>

    </LinearLayout>
    <SearchView

        android:id="@+id/search_order"
        style="@style/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:background="#CAC4C4" />
    <ListView
        android:layout_marginBottom="@dimen/_30sdp"
        android:id="@+id/listViewWaitOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>