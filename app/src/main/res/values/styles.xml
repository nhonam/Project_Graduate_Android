<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#E40000</item>
        <item name="colorControlHighlight">#DBF100</item>
    </style>

    <style name="border" >
        <item name="android:radius">50dp</item>
        <item name="colorControlHighlight">#DBF100</item>
    </style>
    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="textNormal" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textBold_Title" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>