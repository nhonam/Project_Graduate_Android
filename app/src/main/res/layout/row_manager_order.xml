<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">



                        <TextView
                            android:textColor="#00403A"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Mã đơn hàng "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></TextView>

                        <TextView
                            android:id="@+id/idOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="12"
                            android:textColor="#00403A"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Tên người nhận : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:id="@+id/name_reciver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"

                                android:text="Food"
                                android:textColor="#009688"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Địa chỉ gửi hàng : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:id="@+id/shipAdrees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"

                                android:text="Food"
                                android:textColor="#009688"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Số điện thoại : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:id="@+id/phoneRiciver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"

                                android:text="Food"
                                android:textColor="#009688"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Ngày đặt hàng : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:id="@+id/orderDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"

                                android:text="Food"
                                android:textColor="#009688"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Trạng thái đơn hàng : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"

                                android:text="Food"
                                android:textColor="#009688"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
                <TextView
                    style="@style/textNormal"
                    android:text="Trạng thái đơn hàng : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout

                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:text="Đang chờ xác nhận"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <View
                            android:visibility="visible"
                            android:id="@+id/proccess_status_empl"
                            android:layout_height="@dimen/_10sdp"
                            android:background="@color/orange"  android:layout_width="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:text="Đã xác nhận"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <View
                            android:visibility="gone"
                            android:layout_weight="0.2"
                            android:id="@+id/confirm_status_empl"
                            android:layout_height="@dimen/_10sdp"
                            android:background="@color/orange"  android:layout_width="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:text="Đang giao |"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <View
                            android:layout_weight="0.2"
                            android:visibility="gone"
                            android:id="@+id/shipping_status_empl"
                            android:layout_height="@dimen/_10sdp"
                            android:background="@color/orange"  android:layout_width="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.15"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:text="Đã giao |"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <View
                            android:layout_weight="0.2"
                            android:id="@+id/shipped_status_empl"
                            android:visibility="gone"
                            android:layout_height="@dimen/_10sdp"
                            android:background="@color/orange"  android:layout_width="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:text="Đã hủy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <View
                            android:visibility="gone"
                            android:layout_weight="0.2"
                            android:id="@+id/cancel_status_empl"
                            android:layout_height="@dimen/_10sdp"
                            android:background="@color/red"  android:layout_width="match_parent"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>





</LinearLayout>
